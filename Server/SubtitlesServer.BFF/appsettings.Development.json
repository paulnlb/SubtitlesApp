{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "transcription-general": {
        "ClusterId": "transcription",
        "Match": {
          "Path": "/api/whisper/{**remainder}"
        }
      },
      "transcription-swagger": {
        "ClusterId": "transcription",
        "Match": {
          "Path": "/transcription-swagger/{**remainder}"
        },
        "Transforms": [
          {
            "PathPattern": "/swagger/{**remainder}"
          }
        ]
      },
      "identity": {
        "ClusterId": "identity",
        "Match": {
          "Path": "/identity/{**remainder}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/identity"
          },
          { "X-Forwarded": "Set" },
          {
            "RequestHeader": "X-Forwarded-Prefix",
            "Set": "/identity"
          }
        ]
      }
    },
    "Clusters": {
      "transcription": {
        "LoadBalancingPolicy": "LeastRequests",
        "Destinations": {
          "transcription1": {
            "Address": "http://localhost:5032"
          }
        }
      },
      "identity": {
        "Destinations": {
          "identityDest": {
            "Address": "https://localhost:5001"
          }
        }
      }
    }
  }
}
